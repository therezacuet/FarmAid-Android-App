<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Digital_Market_Activity" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="15dp"
        android:weightSum="4"
        android:padding="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/kena"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:background="@drawable/selector"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                    android:id="@+id/market_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:src="@drawable/becha" />

                <TextView
                    android:id="@+id/market_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="বেচে দিন" 
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/becha"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:weightSum="4"
            android:layout_weight="1" >
                
            <ImageView
                    android:id="@+id/diseases_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:src="@drawable/kena" />

                <TextView
                    android:id="@+id/diseases_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="কিনে নিন"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
