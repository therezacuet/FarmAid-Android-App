<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="6"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/file" />

    </LinearLayout>

    <ImageButton
              android:id="@+id/btnSound"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_marginTop="-30dp"
              android:layout_gravity="center"
              android:scaleType="fitXY"
              android:background="@drawable/image_border_big"
              android:src="@android:drawable/ic_lock_silent_mode_off" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="15dp"
        android:weightSum="4"
        android:padding="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/market_l"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:background="@drawable/selector"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                    android:id="@+id/market_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:src="@drawable/becha_kena" />

                <TextView
                    android:id="@+id/market_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="শস্য বেচা-কেনা" 
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/disease_l"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:weightSum="4"
            android:layout_weight="1" >
                
            <ImageView
                    android:id="@+id/diseases_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:src="@drawable/rog" />

                <TextView
                    android:id="@+id/diseases_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="রোগ শনাক্ত করণ"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fertilizer_l"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
             android:layout_marginTop="10dp"
             android:background="@drawable/selector"
             android:weightSum="4"
            android:layout_weight="1" >
            
            <ImageView
                    android:id="@+id/fertilizer_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:src="@drawable/shar" />

                <TextView
                    android:id="@+id/fertilizer_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="সার সুপারিশ"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </LinearLayout>

    </LinearLayout>
   
</LinearLayout>
